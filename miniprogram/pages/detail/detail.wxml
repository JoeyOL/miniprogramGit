<!--pages/detail/detail.wxml-->
<view class="table1">
  <view class="pic">
    <image class="icon" src="/images/更换头像.png"  />
    <text>头像</text>
    <image class="header" src="{{userHeader}}" bindtap="changeImg"/>

  </view>
  <view class="nickname">
    <image class="icon" src="/images/名片.png" />
    <text>名字</text>
    <input placeholder="请填写昵称(必填)" value="{{userName}}" bindinput="changeName"></input>
  </view>
  <view class="phone">
    <image src="/images/电话.png" class="icon"/>
    <text class="phone1">手机</text>
    <text class="phone2">{{userPhone}}</text>
    <view class="button" bindtap="changePhone">更换</view>
  </view>
  <view class="address" bindtap="changeAddress">
    <image src="/images/收货地址.png" class="icon"/>
    <text>我的地址</text>
  </view>
</view>


<view class="button">
  <text>保存修改</text>
</view>